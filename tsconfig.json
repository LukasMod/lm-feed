{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "ts-declarations/*",
        "node_modules/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
